        <div style="width:100%;">
            <div ID="txtserverkt" runat="server" name="txtserverkt"> </div>
            <form name="NLpayBank" runat="server">
                <ul class="list-content">
                    <li class="active">
                        <div class="selected method">
                            <div class="img-icon">
                                <img src="~/Content/images/sercurity.png" />
                            </div>
                            <div>
                                <span class="title">Sử dụng ví ngân lượng</span>
                                <span class="dest">thanh toán bằng ví điện tử ngân lượng </span>
                            </div>
                            <div class="check-box"><input type="checkbox" class="radio r-payment-method" ID="NL" runat="server" name="paymentMethod" value="1" /></div>
                        </div>
                    </li>
                    <li class="active">
                        <div class="selected method">
                            <div class="img-icon">
                                <img src="~/Content/images/sercurity.png" />
                            </div>
                            <div>
                                <span class="title">Sử dụng QR code</span>
                                <span class="dest">thanh toán bằng quẹt mã QR </span>
                            </div>
                            <div class="check-box"><input type="checkbox" class="radio r-payment-method" ID="NL" runat="server" name="paymentMethod" value="2" /></div>
                        </div>
