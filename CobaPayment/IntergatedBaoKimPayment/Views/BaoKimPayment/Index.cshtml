        .img-icon {
            width: 50px;
            height: auto;
            float: left;
            margin-left: 10px;
            display: inline-block;
        }

        .check-box {
            position: absolute;
            top: 25px;
            right: 10px;
            width: 30px;
        }

        .cardList.clearfix {
            overflow-y: auto;
        }
    </style>
</head>

<body>
