        <div class="nav_header">
            <div class="nav_title">THANH TOÁN ĐƠN HÀNG QUA BẢO KIM</div>
        </div>
        <div class="infor-customer">
            <div class="title-info-order">
                Thông tin đơn hàng
            </div>
            <table style=" clear: both; width: 400px;;float:left;">
                <tr>
                    <td colspan="2"><p><span style="color:#ff5a00;font-weight:bold;text-decoration:underline;">Lưu ý</span> Bạn nhập đầy đủ thông tin sau </td>
                </tr>
                <tr>
                    <td style="text-align:right;">Mã đơn hàng </td>
                    <td>
                        <input runat="server" type="text" id="" name="" class="field-check list-box" value="">

                    </td>
                </tr>
                <tr>
                    <td style="text-align:right;">Mô tả</td>
                    <td>
                        <input runat="server" type="text" id="" name="" class="field-check list-box" value="">

                    </td>
                </tr>
                <tr>
                    <td style="text-align:right;">Họ Tên: </td>
                    <td>
                        <input runat="server" type="text" id="buyer_fullname" name="buyer_fullname" class="field-check list-box " value="">

                    </td>
                </tr>
                <tr>
                    <td style="text-align:right;">Email: </td>
                    <td>
                        <input runat="server" type="text" id="buyer_email" name="buyer_email" class="field-check list-box" value="">
                    </td>
                </tr>
                <tr>
                    <td style="text-align:right;">Số Điện thoại: </td>
                    <td>
                        <input runat="server" type="text" id="buyer_mobile" name="buyer_mobile" class="field-check list-box" value="">
                    </td>
                </tr>
            </table>
        </div>
        <div style="width:100%;">
            <div ID="txtserverkt" runat="server" name="txtserverkt"> </div>
            <form name="NLpayBank" runat="server">
                <ul class="list-content">
                    <li class="active">
                        <div class="selected method">
                            <div class="img-icon">
                                <img src="~/Content/Images/sercurity.png" />
                            </div>
                            <div>
                                <span class="title">Sử dụng ví ngân lượng</span>
                                <span class="dest">thanh toán bằng ví điện tử ngân lượng </span>
                            </div>
                            <div class="check-box"><input type="radio" ID="NL" runat="server" name="v" /></div>
                        </div>
                    </li>
                    <li class="active">
                        <div class="selected method">
                            <div class="img-icon">
                                <img src="~/Content/Images/sercurity.png" />
                            </div>
                            <div>
                                <span class="title">Sử dụng QR code</span>
                                <span class="dest">thanh toán bằng quẹt mã QR </span>
                            </div>
                            <div class="check-box"><input type="radio" ID="NL" runat="server" name="v" /></div>
                        </div>
                    </li>
                    <li>
                        <div class="selected method">
                            <div class="img-icon">
                                <img src="~/Content/Images/atm.png" />
                            </div>
                            <div>
                                <span class="title">Sử dụng thẻ ATM nội địa</span>
                                <span class="dest">thanh toán online thẻ ngân hàng nội địa </span>
                            </div>
                            <div class="check-box"><input type="radio" id="ATM_ONLINE" runat="server" name="v" /></div>
                        </div>
                        <div class="boxContent hide">
                            <p>
                                <i>
                                    <span style="color:#ff5a00;font-weight:bold;text-decoration:{">Lưu ý</span>: Bạn cần đăng ký Internet-Banking hoặc dịch vụ thanh toán trực tuyến tại ngân hàng trước khi thực hiện.
                                </i>
                            </p>
                            <ul class="cardList clearfix">
                                @{
                                    foreach (var item in bankList)
                                    {
                                        if (item.type == BankPaymentMethod.ATM)
                                        {
                                            <li class="bank-online-methods">
                                                <label for="vcb_ck_on">
                                                    <img src="@item.bank_logo" alt="Ngân hàng @item.bank_short_name" width="80" />
                                                    <input type="radio" ID="VCB" runat="server" name="bankcode" bank_payment_id="@item.id" />
                                                </label>
                                            </li>

                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </li>
                    <div class="selected method">
                        <div class="img-icon">
                            <img src="~/Content/Images/atm.png" />
                        </div>
                        <div>
                            <span class="title">Sử dụng thẻ Visa/Master card</span>
                            <span class="dest">chọn thẻ ngân hàng thanh toán </span>
                        </div>
                        <div class="check-box"><input type="radio" ID="VISA" runat="server" name="v" /></div>
                        <div style="margin-top:15px;clear:both;">
                            <li>
                                <img style="width:100px; margin-left:70px" src="~/Content/Images/visa.png" />
                            </li>
                        </div>
                    </div>
                </ul>
                <div class="submit-pay">
                    <button ID="nlpayment" runat="server" onclick="" class="pm-submit">Thanh toán</button>
                </div>
            </form>
        </div>
    </div>
    <script language="javascript">
        $('input[name=""]').bind('click', function () {
            $('.list-content li').removeClass('active');
            $(this).parent().parent('li').addClass('active');
        });
        $("#ATM_ONLINE").change(function () {
            if ($(this).is(':checked')) {
                $('.boxContent').removeClass('hide');
            } else {
                $('.boxContent').addClass('hide');
            }
        });
        $('#nlpayment').click(function () {
            $.ajax({
                url: '/Payment/SendOrder',
                type: 'post',
                dataType: 'json',
                data: $('#order-form').serialize(),
                success: function (response) { }
            });
        });
    </script>
</body>
</html>
