                            </div>
                            <div class="check-box"><input type="checkbox" class="radio r-payment-method" id="ATM_ONLINE" runat="server" name="paymentMethod" value="3" /></div>
                        </div>
                        <div class="boxContent hide">
                            <p>
                                <i>
                                    <span style="color:#ff5a00;font-weight:bold;">Lưu ý</span>: Bạn cần đăng ký Internet-Banking hoặc dịch vụ thanh toán trực tuyến tại ngân hàng trước khi thực hiện.
                                </i>
                            </p>
                            <ul class="cardList clearfix">
                                @{
                                    foreach (var item in bankList)
                                    {
                                        var isChecked = string.Empty;
                                        if (item.type == BankPaymentMethod.ATM)
                                        {
                                            if (item.id == 15)
                                            {
                                                isChecked = "checked";
                                            }
                                            <li class="bank-online-methods">
                                                <label for="vcb_ck_on">
                                                    <img class="img-bank" src="@item.bank_logo" alt="Ngân hàng @item.bank_short_name" width="80" />
                                                    <input type = "checkbox" class="radio" ID="VCB" runat="server" name="bankcode" bank_payment_id="@item.id" />
                                                </label>
                                            </li>

                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </li>
                    <div class="selected method">
                        <div class="img-icon">
                            <img src="~/Content/images/atm.png" />
                        </div>
                        <div>
                            <span class="title">Sử dụng thẻ Visa/Master card</span>
                            <span class="dest">chọn thẻ ngân hàng thanh toán </span>
                        </div>
                        <div class="check-box"><input type="checkbox" class="radio r-payment-method" ID="VISA" runat="server" name="paymentMethod" value="4" /></div>
                        <div style="margin-top:15px;clear:both;">
                            <li>
                                <img style="width:100px; margin-left:70px" src="~/Content/images/visa.png" />
                            </li>
                        </div>
                    </div>
                </ul>
                <div class="submit-pay">
                    <button ID="nlpayment" runat="server" onclick="" class="pm-submit">Thanh toán</button>
                </div>
            </form>
        </div>
    </div>
    <script language="javascript">
        var bankPaymentMethod = false;
        $('input[name=""]').bind('click', function () {
            $('.list-content li').removeClass('active');
            $(this).parent().parent('li').addClass('active');
        });

        $('input[type=checkbox][name=paymentMethod]').change(function () {
            debugger;
            if ($(this).is(":checked")) {
                if (this.value != '3') {
                    if (!$(".boxContent").hasClass("hide")) {
                        $(".boxContent").addClass("hide");
                    }
                    bankPaymentMethod = false;
                }
                if (this.value == '1') {
                }
                else if (this.value == '2') {
                } else if (this.value == '3') {
                    $(".boxContent").removeClass("hide");
                    if ($('input[type=checkbox][name=bankcode]:checked').length > 0) {
                        var bankCode = $('input[type=checkbox][name=bankcode]:checked')[0].value;
                        $("#bpm_id").val(bankCode);
                        bankPaymentMethod = true;
                    }
                } else if (this.value == '4') {
                }
            } else {
                $($('input[type=checkbox][name=paymentMethod]')[0]).prop("checked", true)
            }
        });

        // bank selected
       
        $('#nlpayment').click(function (e) {
            if (bankPaymentMethod) {
                $('input[type=checkbox][name=bankcode]').change(function () {
                    var bankCode = $('input[type=checkbox][name=bankcode]:checked')[0].value;
                    $("#bpm_id").val(bankCode);
                });
            }
            $.ajax({
                url: '/BaoKimPayment/SendOrder',
                type: 'post',
                dataType: 'json',
                data: $('#order-form').serialize(),
                success: function (response) { }
            });
        });

        // checkbox
        $("input:checkbox").on('click', function () {
            // in the handler, 'this' refers to the box clicked on
            var $box = $(this);
            if ($box.is(":checked")) {
                // the name of the box is retrieved using the .attr() method
                // as it is assumed and expected to be immutable
                var group = "input:checkbox[name='" + $box.attr("name") + "']";
                // the checked state of the group/box on the other hand will change
                // and the current value is retrieved using .prop() method
                $(group).prop("checked", false);
                $box.prop("checked", true);
            } else {
                $box.prop("checked", false);
            }
        });
    </script>
</body>
</html>
